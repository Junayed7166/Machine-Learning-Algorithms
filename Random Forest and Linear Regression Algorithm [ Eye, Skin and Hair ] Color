import io
data = pd.read_csv(io.BytesIO(uploaded['Final Data.csv']))
data

x = data.iloc[:,2:8].values
y = data.iloc[:,12:13].values
y

# Import train_test_split function
from sklearn.model_selection import train_test_split

# Split dataset into training set and test set
x_train, x_test, y_train, y_test = train_test_split(x, y, test_size=0.10) # 90% training and 10% test

from sklearn.ensemble import RandomForestRegressor
regression = RandomForestRegressor(n_estimators = 21, random_state = 0)
regression.fit(x_train, y_train)

#from sklearn.metrics import r2_score
#r2_score(y_test, y_pred)
