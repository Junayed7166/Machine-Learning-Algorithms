# Multi Logistic Regression
# Finding Color Percentage

from sklearn import linear_model
eyeColor = linear_model.LinearRegression()
eyeColor.fit(data[['1st_Codon','2nd_Codon','3rd_Codon','4th_Codon','5th_Codon','6th_Codon']],data[['Blue-Gray','Green-Hazel','Brown']])

hairColor = linear_model.LinearRegression()
#hairColor.fit(data[['1st_Codon','2nd_Codon','3rd_Codon','4th_Codon','5th_Codon','6th_Codon']],data[["Fair_Pale_Skin","Medium_Skin","Olive_Dark_Skin"]])
hairColor.fit(data[['1st_Codon','2nd_Codon','3rd_Codon','4th_Codon','5th_Codon','6th_Codon']],data[["Red_Auburn_Hair", "Fair_Blond_Hair", "Light_Brown_Hair", "Dark_Brown_Hair","Black_Hair"]])


skinColor = linear_model.LinearRegression()
#skinColor.fit(data[['1st_Codon','2nd_Codon','3rd_Codon','4th_Codon','5th_Codon','6th_Codon']],data[["Red_Auburn_Hair", "Fair_Blond_Hair", "Light_Brown_Hair", "Dark_Brown_Hair","Black_Hair"]])
skinColor.fit(data[['1st_Codon','2nd_Codon','3rd_Codon','4th_Codon','5th_Codon','6th_Codon']],data[["Fair_Pale_Skin","Medium_Skin","Olive_Dark_Skin"]])

eyeColorPredict = eyeColor.predict([[2, 4, 2, 2, 4, 2]])
skinColorPredict = skinColor.predict([[2, 4, 2, 2, 4, 2]])
hairColorPredict = hairColor.predict([[2, 4, 2, 2, 4, 2]])


#print(x)
blue = eyeColorPredict[0][0]
green = eyeColorPredict[0][1]
brown = eyeColorPredict[0][2]
print("Blue-Gray Colour : ",blue, "%")
print("Green-Hazel Colour : ",green, "%")
print("Brown Colour : ",brown, "%")


print(skinColorPredict)
Fair_Pale_Skin = skinColorPredict[0][0]
Medium_Skin = skinColorPredict[0][1]	
Olive_Dark_Skin = skinColorPredict[0][2]

print("Fair_Pale_Skin : ",Fair_Pale_Skin, "%")
print("Medium_Skin : ",Medium_Skin, "%")
print("Olive_Dark_Skin : ",Olive_Dark_Skin, "%")

print(hairColorPredict)

Red_Auburn_Hair = hairColorPredict[0][0]
